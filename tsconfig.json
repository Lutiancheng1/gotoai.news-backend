{
  "compilerOptions": {
    "target": "es2017",
    "module": "commonjs",
    "lib": ["es6"],
    "allowJs": true,
    "outDir": "dist",
    "rootDir": "src",
    "strict": true,
    "noImplicitAny": true,
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "typeRoots": ["./node_modules/@types", "./src/types"],
    "skipLibCheck": true,
    "types": [
      "node",
      "express",
      "multer"
    ]
  },
  "include": ["src/**/*", "admin/public/UEditor", "admin/public/UEditor", "admin/src/types/ueditor.d.ts", "admin/src/components/UEditor/index.tsx"],
  "exclude": ["node_modules", "dist"]
} 